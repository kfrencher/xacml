<?xml version="1.0" encoding="UTF-8"?>
<Policy xmlns="urn:oasis:names:tc:xacml:3.0:core:schema:wd-17"
        PolicyId="TimeBasedAccessPolicy"
        Version="1.0"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable">
    
    <Description>Time-based access control policy - only allow access during business hours</Description>
    
    <Target>
        <AnyOf>
            <AllOf>
                <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">sensitive-document</AttributeValue>
                    <AttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:resource:type"
                                         Category="urn:oasis:names:tc:xacml:3.0:attribute-category:resource"
                                         DataType="http://www.w3.org/2001/XMLSchema#string"
                                         MustBePresent="true"/>
                </Match>
            </AllOf>
        </AnyOf>
    </Target>
    
    <!-- Rule: Allow access during business hours (9 AM to 5 PM) -->
    <Rule RuleId="BusinessHoursRule" Effect="Permit">
        <Description>Allow access during business hours (9:00 to 17:00)</Description>
        <Condition>
            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:and">
                <!-- Check if current time is after 9:00 -->
                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:time-greater-than-or-equal">
                    <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:time-one-and-only">
                        <AttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:environment:current-time"
                                             Category="urn:oasis:names:tc:xacml:3.0:attribute-category:environment"
                                             DataType="http://www.w3.org/2001/XMLSchema#time"
                                             MustBePresent="true"/>
                    </Apply>
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#time">09:00:00</AttributeValue>
                </Apply>
                <!-- Check if current time is before 17:00 -->
                <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:time-less-than">
                    <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:time-one-and-only">
                        <AttributeDesignator AttributeId="urn:oasis:names:tc:xacml:1.0:environment:current-time"
                                             Category="urn:oasis:names:tc:xacml:3.0:attribute-category:environment"
                                             DataType="http://www.w3.org/2001/XMLSchema#time"
                                             MustBePresent="true"/>
                    </Apply>
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#time">17:00:00</AttributeValue>
                </Apply>
            </Apply>
        </Condition>
    </Rule>
    
    <!-- Default deny rule for outside business hours -->
    <Rule RuleId="OutsideBusinessHoursDenyRule" Effect="Deny">
        <Description>Deny access outside business hours</Description>
    </Rule>
    
</Policy>