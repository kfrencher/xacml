{
  "name": "xacml-policy-tests",
  "version": "1.0.0",
  "description": "XACML Policy Testing Framework using AuthzForce and Node.js",
  "main": "src/authzforce-client.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "npm run type-check",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f authzforce",
    "authzforce:clean-domains": "node scripts/clean-domains.js",
    "authzforce:list-domains": "node scripts/list-domains.js",
    "authzforce:list-policies": "node scripts/list-policies.js",
    "authzforce:get-policy": "node scripts/get-policy.js",
    "authzforce:create-domain": "node scripts/create-domain.js",
    "authzforce:get-domain": "node scripts/get-domain.js"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "js2xmlparser": "^5.0.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/xml2js": "^0.4.11",
    "jest": "^29.7.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ]
  },
  "keywords": [
    "xacml",
    "authzforce",
    "policy",
    "testing",
    "access-control"
  ],
  "author": "Your Name",
  "license": "MIT"
}
