{
  "name": "xacml-policy-tests",
  "version": "1.0.0",
  "description": "XACML Policy Testing Framework using AuthzForce and Node.js",
  "type": "module",
  "main": "src/authzforce-client.js",
  "scripts": {
    "test": "jest",
    "test:debug": "cross-env LOG_LEVEL=DEBUG jest",
    "build:xacml": "node scripts/build-xacml.js",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f authzforce",
    "authzforce:clean-domains": "node scripts/clean-domains.js",
    "authzforce:list-domains": "node scripts/list-domains.js",
    "authzforce:list-policies": "node scripts/list-policies.js",
    "authzforce:get-policy": "node scripts/get-policy.js",
    "authzforce:create-domain": "node scripts/create-domain.js",
    "authzforce:get-domain": "node scripts/get-domain.js"
  },
  "dependencies": {
    "@xmldom/is-dom-node": "^1.0.1",
    "@xmldom/xmldom": "^0.8.11",
    "axios": "^1.5.0",
    "js2xmlparser": "^5.0.0",
    "xml2js": "^0.6.2",
    "xpath": "^0.0.34"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/xml2js": "^0.4.11",
    "@types/xmldom": "^0.1.34",
    "babel-jest": "^30.2.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ]
  },
  "keywords": [
    "xacml",
    "authzforce",
    "policy",
    "testing",
    "access-control"
  ],
  "author": "Your Name",
  "license": "MIT"
}
