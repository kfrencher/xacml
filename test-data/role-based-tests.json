{
  "testSuite": "Role-Based Access Control Tests",
  "description": "Test cases for role-based XACML policy",
  "policy": "role-based-policy.xml",
  "testCases": [
    {
      "name": "Admin can read documents",
      "description": "Administrator should have read access to documents",
      "request": {
        "subject": {
          "id": "admin1",
          "role": "admin"
        },
        "resource": {
          "id": "doc123",
          "type": "document"
        },
        "action": {
          "id": "read"
        }
      },
      "expected": {
        "decision": "Permit",
        "status": "urn:oasis:names:tc:xacml:1.0:status:ok"
      }
    },
    {
      "name": "Admin can update documents",
      "description": "Administrator should have update access to documents",
      "request": {
        "subject": {
          "id": "admin1",
          "role": "admin"
        },
        "resource": {
          "id": "doc123",
          "type": "document"
        },
        "action": {
          "id": "update"
        }
      },
      "expected": {
        "decision": "Permit",
        "status": "urn:oasis:names:tc:xacml:1.0:status:ok"
      }
    },
    {
      "name": "Admin can delete documents",
      "description": "Administrator should have delete access to documents",
      "request": {
        "subject": {
          "id": "admin1",
          "role": "admin"
        },
        "resource": {
          "id": "doc123",
          "type": "document"
        },
        "action": {
          "id": "delete"
        }
      },
      "expected": {
        "decision": "Permit",
        "status": "urn:oasis:names:tc:xacml:1.0:status:ok"
      }
    },
    {
      "name": "Manager can read documents",
      "description": "Manager should have read access to documents",
      "request": {
        "subject": {
          "id": "manager1",
          "role": "manager"
        },
        "resource": {
          "id": "doc123",
          "type": "document"
        },
        "action": {
          "id": "read"
        }
      },
      "expected": {
        "decision": "Permit",
        "status": "urn:oasis:names:tc:xacml:1.0:status:ok"
      }
    },
    {
      "name": "Manager can update documents",
      "description": "Manager should have update access to documents",
      "request": {
        "subject": {
          "id": "manager1",
          "role": "manager"
        },
        "resource": {
          "id": "doc123",
          "type": "document"
        },
        "action": {
          "id": "update"
        }
      },
      "expected": {
        "decision": "Permit",
        "status": "urn:oasis:names:tc:xacml:1.0:status:ok"
      }
    },
    {
      "name": "Manager cannot delete documents",
      "description": "Manager should not have delete access to documents",
      "request": {
        "subject": {
          "id": "manager1",
          "role": "manager"
        },
        "resource": {
          "id": "doc123",
          "type": "document"
        },
        "action": {
          "id": "delete"
        }
      },
      "expected": {
        "decision": "Deny"
      }
    },
    {
      "name": "User can read documents",
      "description": "Regular user should have read access to documents",
      "request": {
        "subject": {
          "id": "user1",
          "role": "user"
        },
        "resource": {
          "id": "doc123",
          "type": "document"
        },
        "action": {
          "id": "read"
        }
      },
      "expected": {
        "decision": "Permit",
        "status": "urn:oasis:names:tc:xacml:1.0:status:ok"
      }
    },
    {
      "name": "User cannot update documents",
      "description": "Regular user should not have update access to documents",
      "request": {
        "subject": {
          "id": "user1",
          "role": "user"
        },
        "resource": {
          "id": "doc123",
          "type": "document"
        },
        "action": {
          "id": "update"
        }
      },
      "expected": {
        "decision": "Deny"
      }
    },
    {
      "name": "User cannot delete documents",
      "description": "Regular user should not have delete access to documents",
      "request": {
        "subject": {
          "id": "user1",
          "role": "user"
        },
        "resource": {
          "id": "doc123",
          "type": "document"
        },
        "action": {
          "id": "delete"
        }
      },
      "expected": {
        "decision": "Deny"
      }
    },
    {
      "name": "Unknown role denied access",
      "description": "User with unknown role should be denied access",
      "request": {
        "subject": {
          "id": "unknown1",
          "role": "guest"
        },
        "resource": {
          "id": "doc123",
          "type": "document"
        },
        "action": {
          "id": "read"
        }
      },
      "expected": {
        "decision": "Deny"
      }
    }
  ]
}